<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scroll"
	android:layout_height="fill_parent"
	android:layout_width="wrap_content"

	>

	<RelativeLayout

		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:background="@drawable/bg"
		>

    <RelativeLayout 
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_setting">
        
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/text"
	     android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:background="#FFF"
        android:layout_below="@+id/header">
	    
	    <TextView 
	        android:id="@+id/h_text"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Setting"
        android:textSize="15dp"
			android:textColor="#EE5A2F"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel1"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
         android:background="#ffffff"
     >
	    <ImageView 
	        android:id="@+id/general"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_general"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_general"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
        android:text="General"
			android:textColor="#000000"
        android:textSize="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/general"/>
	    <View 
	    android:id="@+id/view1"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_general"/>
	</RelativeLayout>
		<RelativeLayout 
	    android:id="@+id/rel2"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
         android:background="#ffffff"
      >
	    <ImageView 
	        android:id="@+id/social"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
        android:src="@drawable/icon_social_network"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_social"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Networks"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/social"/>
	    <View 
	    android:id="@+id/view2"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_social"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel3"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:background="#ffffff"
        android:layout_below="@+id/rel2"
       >
	    <ImageView 
	        android:id="@+id/sound"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_sound"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_sound"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/sound"/>
	    <View 
	    android:id="@+id/view3"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_sound"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel4"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3"
         android:background="#ffffff"
>
	    <ImageView 
	        android:id="@+id/navi"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_navigation"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_navi"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/navi"/>
	    <View 
	    android:id="@+id/view4"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_navi"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel5"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel4"
         android:background="#ffffff"
       >
	    <ImageView 
	        android:id="@+id/account"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_accounts_login"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_account"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accounts Logins"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/account"/>
	    <View 
	    android:id="@+id/view5"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_account"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel6"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel5"
         android:background="#ffffff"
        >
	    <ImageView 
	        android:id="@+id/notification"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_notifications"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_notification"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/notification"/>
	    <View 
	    android:id="@+id/view6"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_notification"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel7"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel6"
         android:background="#ffffff"
        >
	    <ImageView 
	        android:id="@+id/word"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_spread"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_word"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spread The Word"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/word"/>
	    <View 
	    android:id="@+id/view7"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_word"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel8"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel7"
         android:background="#ffffff"
 >
	    <ImageView 
	        android:id="@+id/abt"
	         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_about"
          android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
	    <TextView 
	        android:id="@+id/tv_abt"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Notice"
        android:textSize="15dp"
			android:textColor="#000000"
          android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/abt"/>
	    <View 
	    android:id="@+id/view8"
	    android:layout_width="wrap_content"
	    android:layout_height="0.5dp"
	    android:background="@drawable/line"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv_abt"/>
	</RelativeLayout>
	<RelativeLayout 
	    
	    android:id="@+id/rel9"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:layout_marginTop="15dp"
	    android:layout_below="@+id/rel8">
	    <TextView 
	        android:id="@+id/tv_help"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="15dp"
	        android:text="Help"
			android:textColor="#EE5A2F"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rel10"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/rel9"
	    android:background="#ffffff">
	    <ImageView 
	        android:id="@+id/help"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
	        android:src="@drawable/icon_about"/>
	    <TextView 
	        android:id="@+id/tv_hel"
	        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to use Traafik"
        android:textSize="15dp"
			android:textColor="#000000"

          android:layout_marginTop="25dp"
         android:layout_marginLeft="20dp"
        
        android:layout_toRightOf="@+id/help"/>
	    <View 
	        android:id="@+id/v"
	        android:layout_width="fill_parent"
	        android:layout_height="10dp"
	        android:layout_below="@+id/tv_hel"
	        android:background="#ffffff"/>
	</RelativeLayout>
	</RelativeLayout>

</ScrollView>

